{% set menuEntries = craft.entries().section('menu').all() %}
{% set menu = [] %}

{% for i in menuEntries %}
  {% set menu =
    menu|merge(
      [
        {
          title: i.title,
          url: i.fieldLinkSimple.getUrl()
        }
      ]
    )
  %}
{% endfor %}

<header-components :site-url="{{ siteUrl()|json_encode }}"
  :menu="{{ menu|json_encode }}"></header-components>
